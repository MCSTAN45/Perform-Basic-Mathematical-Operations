#!/usr/bin/env python3
"""
Task 1: Basic Mathematical Operations
Author: [Your Name]
Date: October 2025
Description: A Python program that performs basic mathematical operations on two user-input numbers.
"""

def basic_math_operations():
    """
    Function to perform basic mathematical operations on two user-input numbers.
    Includes error handling for invalid inputs and division by zero.
    """
    print("=" * 50)
    print("TASK 1: BASIC MATHEMATICAL OPERATIONS")
    print("=" * 50)

    try:
        # Taking input from user
        print("Enter two numbers to perform mathematical operations:")
        num1 = float(input("Enter the first number: "))
        num2 = float(input("Enter the second number: "))

        print(f"\nNumbers entered: {num1} and {num2}")
        print("-" * 40)

        # Performing basic mathematical operations
        addition = num1 + num2
        subtraction = num1 - num2
        multiplication = num1 * num2

        # Handle division by zero
        if num2 != 0:
            division = num1 / num2
        else:
            division = "Cannot divide by zero"

        # Displaying results
        print("RESULTS:")
        print(f"Addition: {num1} + {num2} = {addition}")
        print(f"Subtraction: {num1} - {num2} = {subtraction}")
        print(f"Multiplication: {num1} ร {num2} = {multiplication}")
        print(f"Division: {num1} รท {num2} = {division}")

    except ValueError:
        print("Error: Please enter valid numeric values only!")
    except Exception as e:
        print(f"An unexpected error occurred: {e}")

def main():
    """Main function to run the program"""
    while True:
        basic_math_operations()

        # Ask if user wants to continue
        choice = input("\nDo you want to perform another calculation? (y/n): ").lower()
        if choice != 'y' and choice != 'yes':
            print("Thank you for using the calculator!")
            break
        print()

# Run the program
if __name__ == "__main__":
    main()
